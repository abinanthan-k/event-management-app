<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Listings</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/event.css">
</head>
<body class="bg-image">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark glass-navbar">
        <a class="navbar-brand" href="/">Event Management</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/about">About Us</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/events">Events</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Upcoming Events</h1>
        <section id="event-list" class="row">
            <% if (events && events.length > 0) { %>
                <% events.forEach(event => { %>
                    <div class="col-md-4">
                        <div class="card event glass-card mb-4">
                            <div class="card-body">
                                <h5 class="card-title text-primary"><%= event.title %></h5>
                                <p class="card-text"><%= event.description || "No description provided." %></p>
                                <p class="card-text"><small class="text-muted">📅 <%= new Date(event.date).toDateString() %></small></p>
                                <p class="card-text"><small class="text-muted">📍 <%= event.location %></small></p>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center">
                    <p class="text-muted">No events found.</p>
                </div>
            <% } %>
        </section>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
